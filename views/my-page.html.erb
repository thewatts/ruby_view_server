<style>
	
	@import url(http://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700);
	body { 
		background: #efefef; 
		font-size: 100%; 
		font-family: 'PT Sans Narrow', sans-serif; 
	}
	.content { width: 600px; padding: 20px 50px; margin: 0px auto; background: #fff; margin-top: 50px; }
	.content h1 { font-size: 2em; } 
	.content h2 { font-size: 1.6em; }
	.content h3 { font-size: 1.4em; }
	.content p.info { font-size: 1em; text-transform: capitalize; }
	p.info span { font-style: italic; font-weight: 700; }

</style>
<!doctype html>
<html>
<head>
	<title>This is an ERB page!</title>
</head>
<body>
	<div class="wrapper">

		<div class="content">

			<h1>This is my page!</h1>
			<h2>Isn't it SOOO cool?!?!</h2>

			<% # setting variables to be used within this template
				watts = { name: "Nathaniel Watts", age: 26, location: "The Deep South",
									 occupation: "Aspiring Rails Developer", 
									 sanity: "Questionable" }
				favorites = [ 
					'Cheese', 
					'Cycling', 
					'Long Walks on the Beach', 
					'Sleeping' 
				] %>

			<h3>Here is some information about me!</h3>
			<% watts.each do |label, info| %>
				<p class="info"><span><%= label %>:</span> <%= info %></p>
			<% end %>

			<h3>Here is a list of my favorite things:</h3>
			<ul class="favs">
				<% favorites.each do |fav| %>
				<li><%= fav %></li>
				<% end %>
			</ul>

			<h3>That's it for now... KKTHX</h3>

		</div><!-- //content -->
	</div><!-- //wrapper -->
</body>
<html>

